<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sandro.openalprsample.panelAdministrativo">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:gravity="center_horizontal"
            android:text="API REST"
            android:textSize="25sp"
            android:typeface="serif"/>

        <Button
            android:id="@+id/bComunity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comunidad"
            android:onClick="comunity"/>
        <Button
            android:id="@+id/bOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Propietario"
            android:onClick="owner"/>
        <Button
            android:id="@+id/bOwnerShip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Propiedad"
            android:onClick="ownerShip"/>
        <Button
            android:id="@+id/bVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehiculo"
            android:onClick="vehicle"/>

        <Button
            android:id="@+id/bAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial de Acceso"
            />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
